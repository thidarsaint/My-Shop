<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_rose"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rose"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txt_mylove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Love,"
        android:textSize="30sp"
        android:textColor="#1088E7"
        android:background="#F8F4F4"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/img_rose"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/txt_love_flower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Like a Flower"
        android:textSize="30sp"
        android:background="#F8F4F4"
        android:textColor="#1088E7"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_mylove"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="25dp"
        android:layout_height="18.5dp"
        android:src="@drawable/ic_star_shape"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:background="#F8F4F4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_love_flower"
        />

    <TextView
        android:id="@+id/txt_editor_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editor's choice"
        android:layout_marginTop="25dp"
        android:textColor="#B43E3E"
        android:background="#F8F4F4"
        app:layout_constraintLeft_toRightOf="@id/img_star"
        app:layout_constraintTop_toBottomOf="@id/txt_love_flower"
        />


    <TextView
        android:id="@+id/txt_about_flower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="#F8F4F4"
        android:text="If you love a flower, donâ€™t pick it up. Because if you pick it up it dies and it ceases to be what you love.
So if you love a flower, let it be. Love is not about possession.Love is about appreciation. Flowers always make people better, happier and more helpful; they are sunshine, food and medicine for the soul."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_editor_choice"
        />

    <ImageView
        android:id="@+id/img_dollar"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_money"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123F9B"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toRightOf="@id/img_dollar"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_order_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Now"
        android:background="@drawable/rounded_button"
        android:textColor="#FAF2F2"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>